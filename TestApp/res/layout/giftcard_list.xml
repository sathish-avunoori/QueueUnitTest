<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gc_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:paddingRight="3dp"       
        android:text="@string/giftcardlist_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/appbgdarkgray" />

    <View
        android:id="@+id/gc_list_saparator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
         android:layout_below="@id/gc_list_textview"
        android:background="@color/appbggray" />

    <ListView
        android:id="@+id/giftcardListview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gc_list_saparator" >
    </ListView>

</RelativeLayout>