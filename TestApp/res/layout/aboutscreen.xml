<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbglightgray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/str_mobile_capture"
            android:textSize="14sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/appbggray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/app_versiontview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/str_app_version"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_versionview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/app_versiontview"
                android:text="@string/app_version"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_sdkversiontview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_versiontview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_app_sdk_version"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_sdkversionview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/app_sdkversiontview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/app_sdkversiontview"
                android:text="@string/str_app_sdk_version"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_privicytview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_sdkversiontview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/str_app_privicy" />

            <TextView
                android:id="@+id/app_patenttview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_privicytview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/str_app_patents"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_patentview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_patenttview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_app_patents_text" />

            <TextView
                android:id="@+id/app_techsupporttview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_patentview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_app_techsupport"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_techsupportview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_techsupporttview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:autoLink="web"
                android:text="@string/str_app_techsupport_link" />

            <TextView
                android:id="@+id/app_homepagetview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_techsupportview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_app_homepage"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_homepageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_homepagetview"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:autoLink="web"
                android:text="@string/str_app_homepage_link" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/app_homepageview"
                android:layout_marginTop="20dp"
                android:background="@color/appbggray" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>