<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/custom_menu_iview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:contentDescription="@string/str_empty"
        android:gravity="center"
        android:src="@drawable/pending_items_icon" />

    <TextView
        android:id="@+id/custom_menu_tview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/custom_menu_iview"
        android:background="@drawable/image_count_style"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>